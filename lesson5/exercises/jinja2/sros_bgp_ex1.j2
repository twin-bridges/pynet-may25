/configure router "Base" bgp group "{{ customer_bgp_peer_group }}" peer-as {{ customer_bgp_as }} 
/configure router "Base" bgp group "{{ customer_bgp_peer_group }}" family ipv4 true
/configure router "Base" bgp group "{{ customer_bgp_peer_group }}" family ipv6 true
